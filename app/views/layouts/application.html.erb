<!DOCTYPE html>
<html>

<head>
  <title>BridgeHaul</title>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
	h1{
		border-bottom: solid 2px gray;
		margin-bottom: 20 px;
	}
  </style>
</head>
<body>
  <div class="container">

    <h1>BridgeHaul &emsp;<small>Welcome Back!</small>
      <div class="pull-right">
      <% if session["user_id"].present? %>
        <small><%= User.find_by(id: session["user_id"]).name %></small>
        <small><%= link_to "My Account", user_path(User.find_by(id: session["user_id"])) %></small>
        <small><%= link_to "Sign Out", '/logout' %></small>
      <% else %>
          <small><%= link_to "Register Now", '/register' %></small>
          <small><%= link_to "Sign In", '/login' %></small>
      <% end %>
      </div>
    </h1>

    <% if notice.present? %>
      <div class="alert alert-info"%>
        <%= notice %>
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
