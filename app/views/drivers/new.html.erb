<style>
  label { width: 75px; vertical-align: middle;}
  h2 {border-bottom: solid 2px gray;
	  margin-bottom: 20px;}
  li { color: red; }
</style>

<h2>Add a Driver</h2>

<% if @driver.errors.any? %>
  <ul>
    <% @driver.errors.full_messages.each do |error| %>
	  <li>Field Entry Error: <%= error %></li>
	<% end %>
  </ul>
<% end %>

<%= form_tag "/drivers" do %>
  <p><label>Name:</label> <input name="name" size="50"></p>
  <p><label>Last Known Latitude:</label> <input name="last_lat" size="10"></p>
  <p><label>Last Known Longitude:</label> <input name="last_long" size="10"></p>
  <p><button>Submit</button></p>
<% end %>