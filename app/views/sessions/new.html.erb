<style>
	h4{
		color: blue;
	}
</style>

<h4>Sign in Below</h4>

<%= form_tag "/sessions" do %>
	<p>
		<%= label_tag :email, "E-mail Address:" %>
		<%= text_field_tag :email %>
	</p>
	<p>
		<%= label_tag :password, "Password:" %>(<%= link_to "Forgot Password", '/reset_passwords/new' %>)
		<%= password_field_tag :password %>
	</p>
	<%= submit_tag "Submit" %>
<% end %>